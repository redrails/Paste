<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Viewing paste"
            android:id="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#000000"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:textSize="40dp"
            android:layout_alignRight="@+id/pasteId"
            android:layout_alignEnd="@+id/pasteId"
            android:layout_weight="0.05"
            android:layout_marginBottom="-10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pasteId"
            android:background="#006388"
            android:autoText="false"
            android:height="50dp"
            android:maxLength="11"
            android:textSize="40dp"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/pasteContent"
            android:layout_alignEnd="@+id/pasteContent" />

        <WebView
            android:layout_width="fill_parent"
            android:layout_height="401dp"
            android:id="@+id/pasteContent"
            android:background="#ffffff" />

    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/abc_ic_menu_paste_mtrl_am_alpha"
        android:background="#00fff7" />

</FrameLayout>
